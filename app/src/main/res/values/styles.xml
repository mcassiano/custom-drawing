<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textViewStyle">@style/Text</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/Text.ToolbarTitle</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Text.ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
